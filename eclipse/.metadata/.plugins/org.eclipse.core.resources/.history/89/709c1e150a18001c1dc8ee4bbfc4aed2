package vclient.hud.mod.impl;

import java.awt.Color;

import net.minecraft.client.gui.Gui;
import vclient.hud.mod.HudMod;
import vclient.setting.BooleanSetting;

public class TestMod extends HudMod{
	
	BooleanSetting test = new BooleanSetting("Test", true);
	ModeSetting testMode = new ModeSetting("Test Mode", "Mode1", "Mode2")

	public TestMod() {
		super("testMod", 5, 5);
		this.addSettings(test,testMode);
	}
	
	@Override
	public void draw() {
		Gui.drawRect(getX() - 2, getY() - 2, getX() + getWidth(), getY() + getHeight(), new Color(0, 0, 0, 170).getRGB());
		fr.drawString(name, getX(), getY(), -1);
		super.draw();
	}
	
	@Override
	public void renderDummy(int mouseX, int mouseY) {
		
		fr.drawString(name, getX(), getY(), -1);
		
		super.renderDummy(mouseX, mouseY);
	}
	
	@Override
	public int getWidth() {
		return fr.getStringWidth(name);
	}
	
	@Override
	public int getHeight() {
		return fr.FONT_HEIGHT;
	}

}
